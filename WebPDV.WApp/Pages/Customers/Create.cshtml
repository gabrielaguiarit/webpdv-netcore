@page
@model WebPDV.WApp.Pages.Customers.CreateModel

@{
    ViewData["Title"] = "Novo Cliente";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1><i class="bi bi-person-plus-fill"></i> Novo Cliente</h1>
<h4>Preencha o formulário abaixo para criar um novo cliente</h4>
<hr />

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Customer.Name" class="control-label mb-1"><i class="bi bi-person-fill me-2"></i>Nome*:</label>
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label mb-1"><i class="bi bi-envelope me-2"></i>Email*:</label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.PhoneNumber" class="control-label mb-1"><i class="bi bi-phone me-2"></i>Telefone*:</label>
                <input asp-for="Customer.PhoneNumber" class="form-control" />
                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Address" class="control-label mb-1"><i class="bi bi-map me-2"></i>Endereço*:</label>
                <input asp-for="Customer.Address" class="form-control" />
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="upload-wrapper">
                <i class="bi bi-cloud-arrow-up upload-icon"></i>
                <input type="file" class="upload-input" />
                <span>Arraste ou selecione um arquivo para upload</span>
            </div>
        </div>
    </div>

    <div class="form-group mt-3 d-flex justify-content-between align-items-center">
        <a asp-page="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i> Voltar
        </a>
        <button type="submit" class="btn btn-primary px-4" asp-page-handler="OnPostAsync">
            <i class="bi bi-person-plus-fill me-2"></i> Adicionar Cliente
        </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .upload-wrapper {
        display: flex;
        align-items: center;
        background-color: #f8f9fa;
        border: 2px dashed #ced4da;
        height: 120px;
        padding: 20px;
        margin-bottom: 15px;
    }

    .upload-icon {
        font-size: 50px;
        color: #adb5bd;
        margin-right: 20px;
    }

    .upload-input {
        display: none;
    }
</style>