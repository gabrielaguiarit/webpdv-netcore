@page
@model WebPDV.WApp.Pages.Customers.EditModel

@{
    ViewData["Title"] = "Editar Cliente";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1><i class="bi bi-person-plus-fill"></i> Editar Cliente</h1>
<hr />

<div class="container my-5" id="container1">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Customer.Id" required />
                <div class="form-group">
                    <label asp-for="Customer.Name" class="form-label">Nome*:</label>
                    <input asp-for="Customer.Name" class="form-control" />
                    <span asp-validation-for="Customer.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Customer.Email" class="form-label">E-Mail*:</label>
                    <input asp-for="Customer.Email" class="form-control" required />
                    <span asp-validation-for="Customer.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Customer.PhoneNumber" class="form-label">Telefone:</label>
                    <input asp-for="Customer.PhoneNumber" class="form-control" required />
                    <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Customer.Address" class="form-label">Endereço*:</label>
                    <input asp-for="Customer.Address" class="form-control" required />
                    <span asp-validation-for="Customer.Address" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-end mt-5">
                    <a asp-page="Index" class="btn btn-secondary me-3"><i class="bi bi-arrow-left me-2"></i> Voltar</a>
                    <button type="submit" class="btn btn-success"><i class="bi bi-person-plus-fill me-2"></i> Salvar e Continuar</button>
                </div>

                <div class="mt-4"></div>
            </form>
        </div>
    </div>
</div>

