@page
@model WebPDV.WApp.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Tem certeza de que deseja excluir este produto?</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3">Nome:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.Name)</dd>

                        <dt class="col-sm-3">Descrição:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.Description)</dd>

                        <dt class="col-sm-3">Preço:</dt>
                        <dd class="col-sm-9">@String.Format("{0:C}", Model.Product.Price)</dd>
                    </dl>

                    <form method="post" class="mt-4">
                        <input type="hidden" asp-for="Product.Id" />

                        <div class="d-flex justify-content-end">
                            <a asp-page="./Index" class="btn btn-secondary me-3">Cancelar</a>
                            <button type="submit" class="btn btn-danger">Excluir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
